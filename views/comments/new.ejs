<% include ../partials/header %>

<div class="container">
    <div class="container">
        <h1>Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%;">
        <form  action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <input class="form-control form-group" type="text" name="comment[text]" placeholder="text">
            <input class="form-control form-group" type="text" name="comment[author]" placeholder="author">
            <button class="btn btn-primary form-group">Submit!</button>
        </form>
        </div>

        <a href="/campgrounds">Go Back</a>
    </div>    
</div>
<% include ../partials/footer %>